---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es-CO">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://weather-app-aguiar.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/documents/caa2827c-9d71-4bfb-bc0c-476748d4d791.png?token=GqbkbihfT0-FI_XEB3W5hSnMycWmIUuop-m2AV3EzGE&height=393&width=750&expires=33243006687"
    />
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="weather-app-aguiar.vercel.app" />
    <meta
      property="twitter:url"
      content="https://weather-app-aguiar.vercel.app/"
    />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/documents/caa2827c-9d71-4bfb-bc0c-476748d4d791.png?token=GqbkbihfT0-FI_XEB3W5hSnMycWmIUuop-m2AV3EzGE&height=393&width=750&expires=33243006687"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Onest Variable", sans-serif;
    background: rgb(71, 191, 223);
    background: -moz-linear-gradient(
      234deg,
      rgba(71, 191, 223, 1) 0%,
      rgba(74, 145, 255, 1) 100%
    );
    background: -webkit-linear-gradient(
      234deg,
      rgba(71, 191, 223, 1) 0%,
      rgba(74, 145, 255, 1) 100%
    );
    background: linear-gradient(
      234deg,
      rgba(71, 191, 223, 1) 0%,
      rgba(74, 145, 255, 1) 100%
    );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#47bfdf",endColorstr="#4a91ff",GradientType=1);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  body {
    display: grid;
    width: 100%;
    place-content: center;
  }
</style>
